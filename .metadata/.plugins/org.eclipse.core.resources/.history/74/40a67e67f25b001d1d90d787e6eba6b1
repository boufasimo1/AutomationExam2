package loops;

import java.util.Scanner;

public class Loops {

	public static void main(String[] args) {
	Scanner ui = new Scanner(System.in)	;
	
 String c = ui.nextLine();
 char[] b = c.toCharArray();
 boolean w= false ;
 
String k ="" ;
 
 for (int i=c.length()-1;i>=0 ;i-- ) {
	 k =k+ b[i];
	 
	
 }
 
 if ( c.equalsIgnoreCase(k)){
	 System.out.println("it's a palindrom");
 }
 else {
	 w = c.equalsIgnoreCase(k);
	 while (w=false)
		  
	 {
	 System.out.println("nort");
	 String l = ui.nextLine();
	 c=l;
	 if ( c.equalsIgnoreCase(k)){
		 System.out.println("it's a palindrom");
	
	 }
 }
 
 
 
	}}
